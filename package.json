{
  "name": "tower-defense",
  "version": "0.0.1",
  "description": "tower-defense",
  "type": "module",
  "keywords": [],
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "release": "bumpp && npm publish",
    "eslint": "eslint src/** --ext .js,.ts,.cjs --fix"
  },
  "author": "",
  "bugs": "https://github.com/our-mini-games/tower-defense/issues",
  "homepage": "https://github.com/our-mini-games/tower-defense#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/our-mini-games/tower-defense.git"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/node": "^18.16.18",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "bumpp": "^9.1.1",
    "commitizen": "^4.3.0",
    "eslint": "^8.42.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "esno": "^0.16.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0"
  }
}
